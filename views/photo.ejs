<%- include('layout/header') %>
    <div class="text-center center-div" id="photo">
      <div class="container w-25 border py-5 photo-header">
        <div class="title pb-5">
          <h3 class="font-weight-bold text-success mt-3">
            Your Internet Provider
          </h3>
          <span class="mt-3">Upload Website Image </span>
        </div>
        <form action="/upload" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <input
              type="file"
              class="form-control"
              name="image"
              accept="image/*"
              onchange="showPreview(event)"
            />
            <small class="form-text text-muted text-left"
              >Upload Images from Frontend</small
            >
          </div>
          <button type="submit" class="btn btn-success mt-3">Upload</button>
          <div class="preview mt-3 text-center center-text">
            <img id="image-preview" height="90px" width="135px" class = "shadow-4-strong border border-success rounded"/>
          </div>
        </form>
        <div class="text-success font-weight-bold py-1 text-decoration-underline">
          <%= data%>
        </div>
        <div class="text-success font-weight-bold text-decoration-underline">
          <a href = "<%= link%>" class = "link"><%= link%></a>
        </div>
      </div>
    </div>

    <script>
      function showPreview(event) {
        if (event.target.files.length > 0) {
          var src = URL.createObjectURL(event.target.files[0]);
          var preview = document.getElementById("image-preview");
          preview.src = src;
          preview.style.display = "block";
        }
      }
    </script>
   
   <%- include('layout/footer') %>
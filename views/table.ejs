<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (removal) { %>
            <div class="alert alert-danger" role="alert">
                <%= removal %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% } %>
            <div class="header p-3 d-flex align-items-center justify-content-around">
                <h3>Yip Image Hosting</h3>
                <button class="btn btn-dark"><a href="/upload" target="_blank" class="text-white">Add New Image</a></button>
            </div>
            <div class="table-responsive">
                <table class="table table-striped text-center align-items-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Link</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data) { %>
                            <% JSON.parse(data).map((res,index) => { %>
                                <tr <%= key = index + 1 %> >
                                    <td class="font-weight-bold"><%= key %></td>
                                    <td><img src=" <%= res %>" height="50px" width="50px"/></td>
                                    <td><%= res %></td>
                                    <td> 
                                        <a href="/remove?id=<%= res.substr(26) %>" class="text-danger"><i class = "fas fa fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                            <% } %>    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>